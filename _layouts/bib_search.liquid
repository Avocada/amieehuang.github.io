<div id="bib-search" style="margin:1rem 0;">
  <input id="bib-search-input" type="search" placeholder="Search publicationsâ€¦" style="width:100%;padding:.6rem .8rem;border:1px solid var(--global-divider-color);border-radius:6px;">
</div>
<script>
document.addEventListener('DOMContentLoaded', function () {
  var input = document.getElementById('bib-search-input');
  function filter() {
    var term = (input.value || '').toLowerCase();
    document.querySelectorAll('ol.bibliography li').forEach(function (li) {
      var text = (li.textContent || '').toLowerCase();
      li.style.display = text.indexOf(term) > -1 ? '' : 'none';
    });
  }
  input.addEventListener('input', filter);
});
</script>
